{
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.6,
  "editor.fontLigatures": "'calt', 'ss01'",
  "git.autofetch": true,
  "workbench.colorTheme": "Community Material Theme Palenight High Contrast",
  "workbench.colorCustomizations": {
    "[Material Theme Palenight High Contrast]": {},
    //bracket color
    "editorBracketHighlight.foreground1": "#DA70D6",
    "editorBracketHighlight.foreground2": "#0b74f5",
    "editorBracketHighlight.foreground3": "#43d6ff",
    "editorBracketHighlight.foreground4": "#6edb0f",
    "editorBracketHighlight.foreground5": "#e0e24a",
    "editorBracketHighlight.foreground6": "#e27e60",
    "editorBracketHighlight.unexpectedBracket.foreground": "#bb1d22"
  },
  "editor.bracketPairColorization.enabled": true,
  //bracket color 

  // colorize conf
  "colorize.colorized_variables": [
    "CSS",
    "SASS"
  ],

  "editor.fontFamily": "'Cascadia Code'",
  "terminal.integrated.rendererType": "dom",
  "carbon.theme": "night-owl",
  "vscode_vibrancy.theme": "Dark (Only Subbar)",
  "terminal.external.windowsExec": "",
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDelete": false,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,

  //prettier conf start
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.tabWidth": 4,
  "prettier.arrowParens": "avoid",
  "prettier.requireConfig": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  //prettier conf end

  
  // "workbench.editorAssociations": {
  //   "*.ipynb": "jupyter.notebook.ipynb"
  // },
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "firefox",
  "liveServer.settings.ChromeDebuggingAttachment": false,
  "editor.linkedEditing": true,
  "terminal.integrated.env.windows": {},
  "terminal.integrated.fontFamily": "Hack NF",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "security.workspace.trust.untrustedFiles": "open",
  "html.format.contentUnformatted": "",
  "html.format.extraLiners": "",
  "editor.cursorBlinking": "expand",
  "editor.minimap.enabled": false,
  "html-css-class-completion.CSSLanguages": [
    "css",
    "sass",
    "scss"
  ],
  // "editor.fontLigatures": true,
  "liveServer.settings.CustomBrowser": "firefox",
  "liveSassCompile.settings.formats": [

    {
        "format": "expanded",
        "extensionName": ".css",
        "savePath": "/css",
    }
  ],
  "editor.cursorSmoothCaretAnimation": true,
  "editor.guides.bracketPairs": true,
  // "workbench.experimental.layoutControl.enabled": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\Windows\\System32\\wsl.exe",
      "args": [
        "-d",
        "Ubuntu"
      ]
    }
  },
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false
  },
}